<?xml version="1.0" encoding="utf-8"?>
<!--史长顺-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestMainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#2A812E"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/youke"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="游客"
            android:textColor="#ffffff"
            android:textSize="29sp"
            android:layout_marginTop="15dp" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/gust_notice_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="lalalala"
            android:padding="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/gust_notice_button"
            style="@style/imageButtonStyle"
            android:background="@drawable/tixing"/>
        <Button
            android:id="@+id/gust_plan"
            style="@style/imageButtonStyle"
            android:background="@drawable/shengchanjihuaguan"/>
        <Button
            android:id="@+id/gust_predict_harvest"
            style="@style/imageButtonStyle"
            android:background="@drawable/yujicaishou"/>

    </LinearLayout>


</LinearLayout>